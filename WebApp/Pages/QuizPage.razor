@page "/quiz";

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title">Question</h5>
            <p class="card-text">What is your favorite programming language?</p>
            <div class="mb-3">
                <label for="answer" class="form-label">Your Answer</label>
                <input type="text" id="answer" class="form-control" @bind="InputAnswer.answer" placeholder="Type your answer here..." />
            </div>
            <button class="btn btn-primary" @onclick="() => submitAnswer()">Submit</button>
            <div class="mt-3" style="display: @(string.IsNullOrEmpty(trueAnswer) ? "none" : "block")">
                <p class="text-success">Correct Answer: @trueAnswer</p>
            </div>
        </div>
    </div>
</div>

@code {
    public string UserAnswer = string.Empty;
    public AOnly InputAnswer = new AOnly { id=  0, answer = string.Empty };
    public string trueAnswer = string.Empty;


    public bool submitAnswer()
    {
        return false;

    }

}
